	<p>
	</p>

<%= link_to 'Destroy Member', [member.family, member],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
<% end %>
	<h2>Add a member:</h2>
<%= form_for([@family, @family.members.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </p>
	<p>
    <b>Gender:</b><br />
    <div class="form-group">
  
   <%= f.radio_button :gender, true %>
	 <%= f.label :gender_male, 'male' %><br />
   <%= f.radio_button :gender, false %>
	<%= f.label :gender_female, 'female' %>
</div>
</p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

